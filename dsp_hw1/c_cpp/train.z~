#include <stdio.h>
#include "hmm.h"

#define N 6
#define T 50

void CalculateAlpha(HMM* hmm, double** alpha)
{
	for (int i = 0; i < N; i++) {
		alpha[i][0] = hmm->initial[i];
	}
}
void CalculateBeta(HMM* hmm, double** beta)
{
}
void CalculateGamma(HMM* hmm, double** gamma, double** alpha, double** beta)
{
}
void CalculateEpsilon(Hmm* hmm, double** epsilon, double** alpha, double** beta)
{
}
	
int main(int argc,char* argv[])
{
	HMM hmm;
	double alpha[N][T];
	double beta[N][T];
	double gamma[N][T];
	double epsilon[N][T];
	FILE* fp;
	loadHMM(&hmm, argv[1]);
	fp = open_or_die(argv[2], "r");
	CalculateAlpha(&hmm, alpha);
	CalculateBeta(&hmm, beta);
	CalculateGamma(&hmm, gamma);
	CalculateEpsilon(&hmm, epsilon);
	
	return 0;
}
